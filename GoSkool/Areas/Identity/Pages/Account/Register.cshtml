@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid padding">
    <div class="row padding">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row padding">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="Last Name" />
                    <label asp-for="Input.LastName">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Age" class="form-control" aria-required="true" placeholder="20" />
                    <label asp-for="Input.Age">Age</label>
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" id="roles" asp-items="@Model.Input.RoleList" class="form-select" aria-required="true">
                        <options><option selected disabled>---SELECT---</option></options>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
            </div>
            <div id="teacher" class="col-lg-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Subject" class="form-control" aria-required="true" placeholder="Subject" />
                    <label asp-for="Input.Subject">Subject Name</label>
                    <span asp-validation-for="Input.Subject" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Mobile Number" />
                    <label asp-for="Input.PhoneNumber">Mobile Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div id="student" class="col-lg-6 mb-3">
                <div class="form-floating mb-3">
                    <select asp-for="Input.StudentClass" id="classes" asp-items="@Model.Input.ClassList" class="form-select" aria-required="true">
                        <options></options>
                    </select>
                    <span asp-validation-for="Input.StudentClass" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Address" class="form-control" placeholder="Address" />
                    <label asp-for="Input.Address">Address</label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
            <div id="driver" class="col-lg-6 mb-3">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Salary" type="number" class="form-control" placeholder="Salary" />
                    <label asp-for="Input.Salary">Salary</label>
                    <span asp-validation-for="Input.Salary" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.BusNumber" type="number" class="form-control" placeholder="Bus Number" />
                    <label asp-for="Input.BusNumber">Bus Number</label>
                    <span asp-validation-for="Input.BusNumber" class="text-danger"></span>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

   
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script type="text/javascript">
    $('#teacher').hide();
    $('#student').hide();
    $("#driver").hide();
    $('#roles').change(function () {
        var value = $(this).val();
        console.log(value)
        if(value=="Teacher"){
            $("#teacher").show();
            $("#student").hide();
            $("#driver").hide();
        }else if(value=="Student"){
            $("#teacher").hide();
            $("#student").show();
            $("#driver").hide();
        }else if(value=="Driver"){
            $("#teacher").hide();
            $("#student").hide();
            $("#driver").show();
        }
        else{
            $('#teacher').hide();
            $('#student').hide();
            $("#driver").hide();
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
