<script type="text/javascript">
    $('#teacher').hide();
    $('#student').hide();
    $("#driver").hide();
    $("#accountant").hide();
    $('#roles').change(function () {
        var value = $(this).val();
        console.log(value)
        if(value=="Teacher"){
            $("#teacher").show();
            $("#student").hide();
            $("#driver").hide();
            $("#accountant").hide();
        }else if(value=="Student"){
            $("#teacher").hide();
            $("#student").show();
            $("#driver").hide();
            $("#accountant").hide();
        }else if(value=="Driver"){
            $("#teacher").hide();
            $("#student").hide();
            $("#driver").show();
            $("#accountant").hide();
        }else if(value=="Accountant"){
            $("#teacher").hide();
            $("#student").hide();
            $("#driver").hide();
            $("#accountant").show();
        }
        else{
            $('#teacher').hide();
            $('#student').hide();
            $("#driver").hide();
            $("#accountant").hide();
        }
    });
</script>

