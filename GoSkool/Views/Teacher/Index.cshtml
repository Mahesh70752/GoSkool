@{
    ViewData["Title"] = "Home";
}

@model GoSkool.Views.Teacher.TeacherHomeModel;

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="teacher-home">
    <div id="carousel" class="carousel slide" data-bs-ride="carousel" data-interval="1000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.pexels.com/photos/5212338/pexels-photo-5212338.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="w-100" alt="" />
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="d-none d-md-block col-md-11 col-lg-9 col-xl-8 bg-white text-end text-dark">
                                <h3 class="pb-3">Welcome to GoSkool</h3>
                                <div class="border-top border-dark mb-3 w-75 ms-auto"></div>
                                <p class="lead">Here you can check your assigned classes.
                                    Their respective attendance records and Syllabus etc..</p>
                                <a href="#classes" class="btn btn-light">Learn more...</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/6935981/pexels-photo-6935981.jpeg" class="w-100" alt="" />
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row">
                            <div class="d-none d-md-block col-md-9 col-lg-7 bg-dark text-start">
                                <h3>Know your Students</h3>
                                <div class="border-top border-white my-1 w-75"></div>
                                <p class="lead">Check Students data like assignments 
                                    and their Exam status.</p>
                                <a class="btn btn-primary">Learn more...</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <ol class="carousel-indicators">
                <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#carousel" data-bs-slide-to="1" ></li>
            </ol>
        </div>
        <div class="container mt-4 mb-5" id="classes">
            <h3>My Classes</h3>
            <div class="row gy-3">
                @foreach (var Class in Model.classes)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://images.pexels.com/photos/6935981/pexels-photo-6935981.jpeg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Class: @Class.Standard.ClassNumber@Class.Section.Name</h5>
                                <p class="card-text">Check out class data, enrolled students and assignments</p>
                                <a href="#" class="btn btn-primary">Check</a>
                            </div>
                        </div>
                    </div>
                }                
            </div>
        </div>
        <div class="container-fluid pt-4 pb-5 bg-ofw">
            <div class="container">
                <h3>Assignments</h3>
                <div class="row gy-3">
                    @{
                        var x = 0;
                        foreach (var assignment in Model.assignments)
                        {
                            x++;
                            if (x > 3) break;
                            <div class="col-lg-4">
                                <div class="card">
                                    <img src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEibiClKGLPDrr04OrF7ctl4qh0F4X5Y4WnsLpO1ZlTDndhmMKsAPAy_vwPzvbxrHeiNIG5auVISzdb-cyYMKSzTlYkqzXHTxnDoe3ZYfcf_v_LPUAtcKHqC1imQGEQtp_m9M3q7-pDHZtM/s1600/HINDI.png" class="card-img-top" />
                                    <div class="card-body">
                                        <h5 class="card-title">@assignment.Title</h5>
                                        <p class="card-text">Description: @assignment.Description</p>
                                        <p class="card-text">For Class: @assignment.Class.Standard.ClassNumber@assignment.Class.Section.Name</p>
                                        <a asp-route-asId="@assignment.Id" asp-action="TeacherAssignment" asp-controller="Assignment" class="btn btn-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="row justify-content-center">
                    <a asp-action="Assignments" class="btn btn-primary w-25 m-5">Check All</a>
                </div>
                <a asp-route-teacherId="@Model.teacherId" asp-action="Create" asp-controller="Assignment" class="btn btn-outline-dark btn-small mt-4">Create Assignment</a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>